diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 9b5e0958a8060b678587359bb76d070cfa997aaf..a9317e94e196cb9da5ac2e8621ab6e51d8cc435d 100644
